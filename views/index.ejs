<html>
  <header>
    <title>Id location finder</title>
    <script src="//cdn.bootcss.com/zepto/1.2.0/zepto.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </header>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Location finder</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <form id="form">
            <div class="form-group">
              <label for="q"></label>
              <input type="text" class="form-control" placeholder="ZÃ¼rich HB" id="q" name="q">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
          </form>
        </div>
      </div>
      <div class="row">
        <ul id="results">
        </ul>
      </div>
    </div>

    <script>
      const form = $('#form');
      form.on('submit', (e) => {
        e.preventDefault();
        const url = `/loc?${form.serialize()}`;
        $.get(url, function(response){
          const results = $('#results');
          results.html('');
          response.forEach(item => {
            results.append(`<li>${item.name}: <b>${item.id}</b></li>`);
          });
        });
      });
    </script>

  </body>
</html>